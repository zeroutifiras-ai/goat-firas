def calculator():
    print("=== Simple Python Calculator ===")
    print("Type 'exit' to quit.\n")

    while True:
        expr = input("Enter expression (ex: 5 + 3 * 2): ")

        if expr.lower() == "exit":
            print("Goodbye!")
            break

        try:
            # منع إدخال أحرف خطره
            allowed = "0123456789+-*/(). "
            if any(ch not in allowed for ch in expr):
                raise ValueError("Invalid characters detected")

            result = eval(expr)
            print("Result =", result)

        except Exception as e:
            print("Error:", e)

calculator()
